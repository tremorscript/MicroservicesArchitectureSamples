{
    "version": "2.0.0",
    "tasks": [
        {
<
            "label": "build dotnet",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build",
                "${workspaceFolder}/InitialDevSetup.sln",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": [
                "$msCompile"
            ]
        },
        {
            "label": "Run docker-compose up",
            "type": "docker-compose",
            "dockerCompose": {
                "up": {
                    "detached": true,
                    "build": true
                },
                "files": [
                    "${workspaceFolder}/docker-compose.yml",
                    "${workspaceFolder}/docker-compose.override.yml"
                ]
            }
        },
        {

            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",

                "${workspaceFolder}/Services/SampleApi1/SampleApi1.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",

                "${workspaceFolder}/Services/SampleApi1/SampleApi1.csproj",

                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",

                "${workspaceFolder}/Services/SampleApi1/SampleApi1.csproj"

            ],
            "problemMatcher": "$msCompile"
        }
    ]
}